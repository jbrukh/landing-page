
<div class="row hero info-row">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-lg-4 col-lg-offset-4 description">
				<h1>Pay your rent online.</h1>
				<h2>We'll send the check.</h2>
			</div>
		</div>

		<% if @ref_code %>
		<div class="row share">
			<div class="col-xs-12">
				Refer your friends and get a month free:
			</div>
			<div class="col-xs-12">
				http://www.rentvelope.com/?ref=<%= @ref_code %>
			</div>
		</div>
		<% else %>
		<div class="row cta">
			<div class="col-lg-3 col-lg-offset-4 email-input">
				<%= text_field_tag :email, 'Enter your email address...', :id => 'email-input' %>
			</div>
			<div class="col-lg-1 submit-button">
				Get early access
			</div>
		</div>
		<% end %>
		<div class="row">
			<div class="col-xs-12 response">
			</div>
		</div>
	</div>
</div>


<div class="row pricing info-row">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-12 margin-2">
				<h1>Take advantage of online payments.</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 margin-2">
				<%= fa_icon "university", :alt => "eCheck", :class => 'cc-icon' %>
				<%= image_tag("visa-64.png", :alt => "Visa", :class => 'cc-icon') %>
				<%= image_tag("mastercard-64.png", :alt => "Visa", :class => 'cc-icon') %>
				<%= image_tag("discover-64.png", :alt => "Visa", :class => 'cc-icon') %>
				<%= image_tag("american-express-64.png", :alt => "Visa", :class => 'cc-icon') %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 margin-2">
				<table class="price-table">
					<tr>
						<td>Bank Account</td>
						<td>$7.99</td>
						<td>flat fee</td>
					</tr>
					<tr>
						<td>Debit Card</td>
						<td>1.5%</td>
						<td>of rent</td>
					</tr>
					<tr>
						<td>Credit Card</td>
						<td>2%</td>
						<td>of rent</td>
					</tr>
				</table>
			</div>
		</div>
		<div class="row">
			<div class="subtext col-xs-12">Prices quoted per customer per transaction. Prices are subject to change.</div>
		</div>
	</div>
</div>
